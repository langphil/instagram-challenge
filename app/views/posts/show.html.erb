<div class="col-12">
  <div class="row justify-content-center">
    <section class="img-box">
      <div class="img-head">
        <p>User</p>
      </div>
      <div class="img-body">
        <%= image_tag @post.image.url(:medium), class: "img-fluid" %>
      </div>
      <div class="img-bottom">
        <p>Like</p>
        <p class="img-caption"><strong>@user</strong> <%= @post.caption %></p>
      </div>
    </section>
  </div>
</div>
